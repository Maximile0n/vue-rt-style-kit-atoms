.color-line
  display inline
  word-break break-word
  position relative
  left 15px


  &-wrapper
    //max-width calc(100vw - 70px)
    padding-bottom 20px
    padding-right 29px
    &--custom
      .color-line-label
        display none
      @media (max-width: mobile-upper-limit)
        .rt-font-banner-label
          display: none
        .rt-price
          color b2c-white

  &--is-paragraph
    display flex
    flex-wrap wrap
    padding-right horizontal-space * .75
    position relative

    &:before,
    &:after
      content ""
      order 1
      width 100%

    @media (max-width: mobile-upper-limit)
      margin-right horizontal-space * 1.5
      left 0


  &-paragraph-icon
    width 41px
    height 21px
    overflow visible
    position absolute
    bottom -20px
    right -20px
    overflow: hidden;
    @media (max-width: tablet-upper-limit)
      height 19px
      bottom -18px
      right -22px
    @media (max-width: mobile-upper-limit)
    //  width 22px
    //  height 10px
      bottom -19px
    //  right -20px



  &-text
    border-right 2px solid white
    position relative
    display inline
    background-color #fff
    box-decoration-break clone
    box-shadow 15px 0 0 #fff, -15px 0 0 #fff
    .color-line-paragraph-icon__background
      fill white
    @media (max-width: mobile-upper-limit)
      border-top-right-radius 4px
    .color-line--is-paragraph &
      @media (max-width: mobile-upper-limit)
        box-shadow none!important
        background-color: transparent!important
        border-right-color transparent!important

    br
      @media (max-width: mobile-upper-limit)
        display none

    .color-line--is-paragraph &
      border-radius 0 5px 0 0
      padding-top vertical-space * .25
      padding-bottom vertical-space * .25
      @media (max-width: mobile-upper-limit)
        padding vertical-space 0

    &--dark-state
      background-color b2c-dark-state
      border-right 2px solid b2c-dark-state
      box-decoration-break clone
      box-shadow horizontal-space * .75 0 0 b2c-dark-state, -1 * horizontal-space * .75 0 0 b2c-dark-state
      .color-line-paragraph-icon__background
